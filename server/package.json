    "seed-prod": "ts-node -r tsconfig-paths/register src/seeders/seedProduction.ts",
    "start-prod": "ts-node -r tsconfig-paths/register --transpile-only src/app.ts",
    "test": "NODE_ENV=test nyc ts-mocha -r tsconfig-paths/register --exit --timeout 10000 -p tsconfig.json tests/**/*.spec.ts",
    "test-local": "SET NODE_ENV=test&& nyc ts-mocha -r tsconfig-paths/register --exit --timeout 10000 -p tsconfig.json tests/**/messageboard.spec.ts",
    "report-parser": "ts-mocha --paths --exit --timeout 10000 -p tsconfig.json tests/unitTests/reportParser.spec.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
