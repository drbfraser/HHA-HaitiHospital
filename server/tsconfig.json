{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./",
    "baseUrl": "./src/",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*", "./security/*", "./tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
