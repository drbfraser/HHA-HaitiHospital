{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./",
    "baseUrl": "./src/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "typeRoots": ["./types"],
    "resolveJsonModule": true,
    "paths": {
      "testTools/*": ["../tests/utils/testTools/*"],
      "testData/*": ["../tests/utils/testData/*"]
    }
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
