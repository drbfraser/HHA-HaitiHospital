{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./",
    "baseUrl": "./src/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
  },
  "include": [
    "./src/**/*",
    "./security/*",
    "./tests/**/*"
  ]
}
